<form method="POST" style="display:flex; flex-direction:column;width:50%;margin:25%;">
    <h3>Введите логин, пароль и кодовое слово</h3>
    <div style="display:flex; flex-direction:row;">
        <div style="display:flex; flex-direction:column; margin:2em; justify-content:space-between; height:30px;" >
            <label for="login">Логин</label>
            <label for="pass1">Пароль</label>
            <label for="pass2">Пароль</label>
            <label for="code">Кодовое слово</label>
        </div>
        <div style="display:flex; flex-direction:column;justify-content:space-around;height:30px; margin:2em;">
            <input type="text" name="login" value="Введите логин" required>
            <input type="password" name="pass1" required>
            <input type="password" name="pass2" required>
            <input type="text" name="code" value="Введите кодовое слово" required>
        </div>
    </div>
    <input type="submit" value="Register" style="width:50%;">
</form>
